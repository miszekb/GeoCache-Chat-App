{
  "name": "localized-chat-server",
  "version": "1.0.0",
  "main": "src/index.ts",
  "author": "TDSOFT",
  "license": "MIT",
  "scripts": {
    "start": "concurrently \"npm run watch\" \"node index.js\"",
    "start:prod": "cross-env NODE_ENV=production PORT=4000 ts-node src/index.ts",
    "watch": "cross-env NODE_ENV=dev nodemon -e ts -w ./src -x npm run watch:serve",
    "watch:serve": "ts-node src/index.ts",
    "seed:db": "ts-node src/tools/seed/index.ts",
    "server": "npm run start --prefix ./",
    "client": "npm run start --prefix ../client-simple",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "devDependencies": {
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-typescript": "^7.3.3",
    "@types/graphql": "^14.2.0",
    "@types/mongoose": "^5.5.3",
    "@types/node": "^12.0.4",
    "husky": "^2.3.0",
    "nodemon": "^1.19.1",
    "pretty-quick": "^1.11.0",
    "ts-node": "^8.2.0",
    "typescript": "^3.5.1"
  },
  "dependencies": {
    "@accounts/database-manager": "^0.13.0",
    "@accounts/graphql-api": "^0.33.2",
    "@accounts/mongo": "^0.13.0",
    "@accounts/password": "^0.13.0",
    "@accounts/server": "^0.33.1",
    "@graphql-modules/core": "^0.7.17",
    "apollo-server-express": "^2.14.2",
    "body-parser": "^1.19.0",
    "chalk": "^2.4.2",
    "concurrently": "^4.1.1",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "express": "^4.17.3",
    "graphql": "14.4.0",
    "graphql-toolkit": "^0.7.5",
    "imap": "^0.8.19",
    "mongoose": "^5.7.5",
    "nodemailer": "^6.6.1",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^2.4.0",
    "type-graphql": "^0.17.4",
    "typegoose": "^5.6.0"
  }
}
